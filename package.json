  "keywords": [
    "nodejs",
    "microservice",
    "communication",
    "websocket",
    "ws",
    "peer-to-peer",
    "p2p"
  ],
  "author": "Oleksii Shkut",
  "license": "ISC",
  "dependencies": {
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/ws": "^6.0.1",
    "find-free-port": "^2.0.0",
    "mocha": "^5.2.0",
    "typedoc": "^0.17.0-3",
    "typescript": "^3.3.1"
  }
}
