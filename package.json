{
  "name": "roletalk",
  "version": "1.0.8",
  "description": "WebSocket-based NodeJS framework for peer-to-peer communication between microservices",
  "main": "built/index.js",
  "types": "built/index.d.ts",
  "scripts": {
    "test": "mocha built/test/test",
    "testb": "tsc && mocha built/test/test",
    "build": "tsc",
    "echo": "node echo/index.js 5000",
    "doc": "rm -rf ./docs && typedoc --readme api_intro.md --out ./docs --mode library --plugin none --exclude **/test/**.ts --excludePrivate --excludeNotExported --stripInternal ./src/index.ts"
