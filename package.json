{
  "name": "roletalk",
  "version": "0.6.1",
  "description": "WebSocket-based NodeJS library for peer-to-peer communication between microservices",
  "main": "built/index.js",
  "types": "built/index.d.ts",
  "scripts": {
    "test": "mocha built/test/test",
    "testb": "tsc && mocha built/test/test",
    "build": "tsc",
    "echo": "node ecFho/index.js 5000",
    "doc": "rm -rf ./docs && typedoc --readme readme.md --out ./docs --mode library --plugin none --exclude **/test/**.ts --excludePrivate --excludeNotExported --stripInternal --excludeExternals ./src/index.ts",
    "readme": "rm -rf ./api && typedoc --readme none --out ./api --mode library --plugin typedoc-plugin-markdown --exclude **/test/**.ts --excludePrivate --excludeNotExported --excludeExternals --stripInternal ./src/index.ts"
  },
  "keywords": [
    "nodejs",
    "microservice",
    "communication",
    "websocket",
    "ws",
    "peer-to-peer",
    "p2p"
  ],
  "author": "shkut",
  "license": "ISC",
  "dependencies": {
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/ws": "^6.0.1",
    "find-free-port": "^2.0.0",
    "mocha": "^5.2.0",
    "typedoc": "^0.17.0-3",
    "typedoc-plugin-markdown": "^2.2.16",
    "typescript": "^3.3.1"
  }
}
